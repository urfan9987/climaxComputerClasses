<!-- views/admin/inquiries.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - User Inquiries</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">User Inquiries</h2>
    <div class="row">
      <% if (inquiries.length > 0) { %>
        <% inquiries.forEach(inquiry => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= inquiry.name %></h5>
                <p class="card-text"><strong>Email:</strong> <%= inquiry.email %></p>
                <p class="card-text"><strong>Phone:</strong> <%= inquiry.phone %></p>
                <p class="card-text"><strong>Message:</strong> <%= inquiry.message %></p>
                <p class="card-text"><small class="text-muted">Submitted on: <%= inquiry.createdAt.toLocaleString() %></small></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No inquiries found</p>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
