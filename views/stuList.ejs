<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .student-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .student-dp {
            border-radius: 50%;
            width: 80px;
            height: 80px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Student List</h2>
        <div class="row">
            <% student.forEach(function(student) { %>
                <div class="col-md-4 mb-4">
                    <div class="student-card">
                        <div class="d-flex align-items-center">
                            <!-- Student DP -->
                            <img src="data:image/png;base64,<%= student.dp %>" alt="Profile Picture" class="student-dp">
                            <div class="ms-3">
                                <h5><%= student.name %></h5>
                                <p><strong>Course:</strong> <%= student.course %></p>
                            </div>
                        </div>
                        <!-- Generate Certificate Button -->
                        <form action="api/v1/update/DistCertificate/<%= student._id %>" method="POST">
                            <button type="submit" class="btn btn-success w-100 mt-3">Generate Certificate</button>
                        </form>
                        <!-- Delete User Button -->
                        <form action="api/v1/auth/delete/<%= student._id %>" method="POST">
                            <button type="submit" class="btn btn-danger w-100 mt-3">Delete User</button>
                        </form>
                        <!-- Assign Grade Section -->
                        <form action="api/v1/update/api/grades/<%= student._id %>" method="POST">
                            <div class="input-group mt-3">
                                <input type="text" name="grade" class="form-control" placeholder="Enter Grade" required>
                                <input type="text" name="date" class="form-control" placeholder="DD-MM-YY" required>
                                <button type="submit" class="btn btn-primary">Assign</button>
                            </div>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
